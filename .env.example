# ============================================
# Perplexity MCP Server Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Required Configuration
# ============================================

# Your Perplexity API key (required)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================
# MCP Server Configuration
# ============================================

# Server name (optional, defaults to package.json name)
# MCP_SERVER_NAME=perplexity-mcp-server

# Server version (optional, defaults to package.json version)
# MCP_SERVER_VERSION=1.0.0

# Transport type: stdio or http (optional, defaults to stdio)
# MCP_TRANSPORT_TYPE=stdio

# HTTP configuration (only used if MCP_TRANSPORT_TYPE=http)
# MCP_HTTP_PORT=3010
# MCP_HTTP_HOST=127.0.0.1
# MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Authentication configuration (optional)
# MCP_AUTH_MODE=jwt
# MCP_AUTH_SECRET_KEY=your_secret_key_minimum_32_characters_long
# OAUTH_ISSUER_URL=https://your-oauth-provider.com
# OAUTH_JWKS_URI=https://your-oauth-provider.com/.well-known/jwks.json
# OAUTH_AUDIENCE=your-audience

# ============================================
# Perplexity API Configuration
# ============================================

# Default model to use (optional, defaults to sonar-reasoning-pro)
# Options: sonar, sonar-pro, sonar-reasoning, sonar-reasoning-pro, sonar-deep-research
PERPLEXITY_DEFAULT_MODEL=sonar-reasoning-pro

# Default reasoning effort for deep research (optional, defaults to medium)
# Options: low, medium, high
PERPLEXITY_DEFAULT_EFFORT=high

# Perplexity API base URL (optional, defaults to https://api.perplexity.ai)
# PERPLEXITY_API_BASE_URL=https://api.perplexity.ai

# Polling interval in milliseconds for async operations (optional, defaults to 2000)
# PERPLEXITY_POLLING_INTERVAL_MS=2000

# Polling timeout in milliseconds for async operations (optional, defaults to 600000 = 10 minutes)
# Increase this value if you're running deep research queries that take longer
PERPLEXITY_POLLING_TIMEOUT_MS=600000

# ============================================
# Security Configuration
# ============================================

# Enable security disclaimer in tool descriptions (optional, defaults to false)
# Set to "true" or "1" to enable warnings about not sharing sensitive data with Perplexity API
# Recommended for sensitive work contexts where queries should be generalized or anonymized
# PERPLEXITY_ENABLE_SECURITY_DISCLAIMER=true

# Enable non-blocking mode for deep research (optional, defaults to false)
# When enabled, deep research queries run in background and return immediately
# Use get_conversation_history to poll for results
# PERPLEXITY_ENABLE_ASYNC_DEEP_RESEARCH=false

# ============================================
# Logging Configuration
# ============================================

# Log level (optional, defaults to info)
# Options: debug, info, warn, error
LOG_LEVEL=info

# Logs directory (optional, defaults to ./logs)
# LOGS_DIR=./logs

# Conversation logs directory (optional, defaults to ./conversation-logs)
# CONVERSATION_LOGS_DIR=./conversation-logs

# ============================================
# Environment Configuration
# ============================================

# Node environment (optional, defaults to development)
# Options: development, production
NODE_ENV=development
